  GtkTreeView::odd-row-color = mix(0.5, @bg_color, @base_color)
  GtkTreeView::even-row-color = @base_color

  GtkExpander::expander-size = 16

  GtkProgressBar::min-horizontal-bar-height = 4
  GtkProgressBar::min-vertical-bar-width = 4

